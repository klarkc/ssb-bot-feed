{
  "name": "ssb-bot-feed",
  "version": "2.2.0",
  "description": "Scuttlebutt bot that read RSS feeds and post updates automatically",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "test": "ava",
    "start": "node --experimental-modules --no-warnings index.js",
    "dev:server": "npx ssb-server start --port 9999 --path .ssb",
    "dev:client": "node --experimental-modules --no-warnings index.js --path .ssb --port 9999 http://feeds.bbci.co.uk/news/rss.xml http://rss.slashdot.org/Slashdot/slashdot",
    "dev": "concurrently --kill-others --restart-tries 3 --restart-after 3000 \"npm run dev:server\" \"npm run dev:client\""
  },
  "bin": {
    "ssb-bot-feed": "index.js"
  },
  "keywords": [
    "ssb",
    "scuttlebutt",
    "bot",
    "feed",
    "rss"
  ],
  "author": "Walker at praiseweb.com.br",
  "license": "MIT",
  "devDependencies": {
    "ava": "^2.4.0",
    "concurrently": "^5.0.0",
    "nock": "^11.7.0",
    "ssb-config": "^3.4.2",
    "ssb-server": "^15.1.2"
  },
  "ava": {
    "require": [
      "esm"
    ],
    "babel": false,
    "extensions": [
      "js"
    ]
  },
  "dependencies": {
    "pull-stream": "^3.6.14",
    "request": "^2.88.0",
    "rss-feed-emitter": "^2.0.1",
    "ssb-client": "^4.7.8",
    "ssb-keys": "^7.2.0",
    "stream-to-pull-stream": "^1.7.3",
    "striptags": "^3.1.1",
    "turndown": "^5.0.3",
    "yargs": "^14.2.0"
  }
}
